<?xml version ="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name ="car">
  <xacro:property name="PI" value="3.1415926535897931"/>
    <link name="base_footprint"/>
    
    <link name ="base_link">
        <visual>
            <origin rpy="0 0 0" xyz="0.035 0 0.025"/>
            <geometry>
                <mesh filename="package://car_description/meshes/orange_body.dae"/>
            </geometry>
        </visual>    
    
    </link>

    <joint name ="base_joint" type="fixed">
        <parent link="base_footprint"/>
        <child link ="base_link"/>
        <origin rpy="0 0 0 " xyz ="1.326 0 0.36"/>
    </joint>

    <link name ="wheel_right_link">
        <visual>
            <origin rpy="1.57079632679 0 0" xyz="0 0 0"/>
            <geometry>
                <mesh filename="package://car_description/meshes/wheel.dae"/>
            </geometry>
        </visual>    
    </link>


    <joint name ="wheel_right_joint" type="continuous">
        <parent link="base_link"/>
        <child link ="wheel_right_link"/>
        <axis xyz ="0 0 1 "/>
        <origin rpy="-1.57079632679 0 0 " xyz ="-1.326 -0.8 0"/>
    </joint>

    <link name ="wheel_left_link">
        <visual>
            <origin rpy="1.57079632679 3.1415926535 0" xyz="0 0 0"/>
            <geometry>
                <mesh filename="package://car_description/meshes/wheel.dae"/>
            </geometry>
        </visual>    
    </link>


    <joint name ="wheel_left_joint" type="continuous">
        <parent link="base_link"/>
        <child link ="wheel_left_link"/>
        <axis xyz ="0 0 1 "/>
        <origin rpy="-1.57079632679 0 0 " xyz ="-1.326 0.8 0"/>
    </joint>





    <link name ="wheel_front_left_link">
        <visual>
            <origin rpy="1.57079632679 3.1415926535 0" xyz="0 0 0"/>
            <geometry>
                <mesh filename="package://car_description/meshes/wheel.dae"/>
            </geometry>
        </visual>    
    </link>


    <joint name ="wheel_front_left_steer_joint" type="revolute">
        <parent link="base_link"/>
        <child link ="wheel_front_left_link"/>
        <origin xyz="1.326 0.819 0" rpy="-1.57079632679 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="-0.6" upper="0.6" effort="-1.0" velocity="-1.0"/>
        <dynamics damping="0.2"/>
    </joint>










</robot>